@model Bela.Application.ViewModels.User.ResetPasswordModel

@{
    ViewData["Title"] = "Promjena lozinke";
}

<div class="row text-center h-100">
    <div class="col-12 mt-4">
        <h2>Promjena lozinke</h2>
        <hr />
        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="All" class="text-left text-danger reg-form-group"></div>
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />
            <div class="form-group reg-form-group">
                <div class="text-left ">
                    <label>Lozinka</label>
                </div>
                <input asp-for="Password" class="form-control" type="password" placeholder="Lozinka" />
            </div>
            <div class="form-group reg-form-group">
                <div class="text-left">
                    <label>Potvrdi lozinku</label>
                </div>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Potvrdi lozinku" />
            </div>
            <div class="form-group text-center">
                <button id="btnSubmit" type="submit" class="btn btn-secondary">Promjeni lozinku</button>
            </div>
        </form>
    </div>
</div>