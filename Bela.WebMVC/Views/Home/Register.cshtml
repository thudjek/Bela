@model Bela.Application.ViewModels.User.UserRegisterModel;
@using Bela.Domain.Enums;
@{
    ViewData["Title"] = "Belot.com.hr";
}
<br />
<div class="row text-center h-100">
    <div class="col-12 mt-4">
        <h2>Registriraj se</h2>
        <hr />
        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-left text-danger reg-form-group"></div>
            <div class="form-group reg-form-group">
                <div class="text-left">
                    <label>Korisničko ime</label>
                </div>
                <input asp-for="UserName" class="form-control" type="text" placeholder="Korisničko ime" />
            </div>
            <div class="form-group reg-form-group">
                <div class="text-left">
                    <label>E-mail</label>
                </div>
                <input asp-for="Email" class="form-control" type="email" placeholder="E-mail" />
            </div>
            <div class="form-group reg-form-group">
                <div class="text-left">
                    <label>Spol</label>
                </div>
                <select asp-for="Gender" class="form-control" asp-items="@Html.GetEnumSelectList<Gender>()"></select>
            </div>
            <div class="form-group reg-form-group">
                <div class="text-left">
                    <label>Lozinka</label>
                </div>
                <input asp-for="Password" class="form-control" type="password" placeholder="Lozinka" />
            </div>
            <div class="form-group reg-form-group">
                <div class="text-left">
                    <label>Potvrdi lozinku</label>
                </div>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Potvrdi lozinku" />
            </div>
            <div class="form-group text-center">
                <button id="btnSubmit" type="submit" class="btn btn-secondary">Registriraj se</button>
            </div>
        </form>
    </div>
</div>